 
<div class="row">
  <% @hotels.each do |hotel| %>
  <div class="col-lg-4">
    <%= link_to image_tag(hotel.photo_url(:thumb), class: 'img-circle add-hotel', alt: hotel.title), hotel %>
    <h3><%= hotel.title %></h3>
  </div><!-- /.col-lg-4 -->
  <% end %>
  <div class="col-lg-4">
  <%= link_to(content_tag(:div, content_tag(:span, "", class: "glyphicon glyphicon-plus hotel-plus"),:class => "img-circle add-hotel"), new_hotel_path) %>
  <h3>Добавити готель</h3>
</div>
</div><!-- /.row -->



